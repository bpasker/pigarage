server {
        listen              443 ssl default_server;
        listen              [::]:443 ssl default_server ;
        server_name         replaceme;

        location / {
                proxy_pass http://127.0.0.1:5000;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
        }
    ssl_certificate /etc/letsencrypt/live/replaceme/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/replaceme/privkey.pem; # managed by Certbot

}