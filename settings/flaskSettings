server {
        listen              443 ssl default_server;
        listen              [::]:443 ssl default_server ;
        server_name         replaceme;

        if ($allowed_country = yes) {
           set $exclusions 1;
        }


        if ($exclusions = "0") {
            return 444;
        }

        location / {
                proxy_pass http://127.0.0.1:5000;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
        }

}